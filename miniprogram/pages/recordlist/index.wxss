/* pages/list/index.wxss */
.main {
  position: relative;
  width: 100%;
  background: #ffffff;
  color: black;
}

.main>.header {
  width: 100%;
  height: 160px;
  transition: .3s;
  overflow: hidden;
  position: relative;
}

.main>.hide {
  height: 0;
}

.main>.body {
  width: 100%;
  background-color: white;
  transition: .3s;

}

.header>.textBox {
  position: absolute;
  top: 20rpx;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  border-radius: 5px;
  border: 1px solid #dbe6fd;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.textBox>.day {
  font-size: 100rpx;
  font-weight: bold;
  color: #301b3f;
}

.scroll {
  width: 100%;
  height: 100%;
  padding: 30rpx;
}

.scroll .scroll-item {
  position: relative;
  width: 100%;
  height: 160px;
  color: white;
  margin-bottom: 20rpx;
  display: flex;
  border-radius: 8px;
  overflow: hidden;
  background-color: #e4fbff;

}

.scroll-item:last-child{
  margin-bottom: 525px;
}

.opacity>.dateBox {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 20rpx;
}

.dateBox>text{
  margin-top: 5rpx;
}

.dateBox>.day{
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.opacity>.sentenceBox {
  padding: 0 10rpx;
  flex: 4;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  background-position: center;
  background-size: cover;
}

.opacity{
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  background-color: rgba(0, 0, 0, 0.3);
}