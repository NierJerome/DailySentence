/* pages/index/item/item-view.wxss */
.main {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: black;
}

.bg {
  position: absolute;

}

.opacityBg {
  top: 0;
  left: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  background: hsla(0, 0%, 0%, 0.2);
  z-index: 1;
}

.main>.content {
  width: 70%;
  height: 900rpx;
  border: 2px solid white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}

.main>.content>view {
  flex: 1;
}

.date {
  text-align: center;

}

.date>.week {
  margin-top: 80rpx;
}

.date>.day {
  margin: 30rpx 0;
  font-size: 120rpx;
}

/* .date>.lunar{
} */

.sentence {
  position: relative;
  width: 80%;
}

.sentence::before {
  position: absolute;
  top: 0;
  content: '每日一句';
  display: block;
  padding: 3rpx 9rpx;
  font-size: 26rpx;
  color: #000;
  background: #fff;
  border-radius: 5rpx;
}

.sentence>.text {
  margin-top: 60rpx;
  letter-spacing: normal;
}

.sentence>.translation {
  margin-top: 20rpx;
}